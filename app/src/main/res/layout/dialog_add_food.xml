<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/add_food_name"
        android:layout_margin="5dp"
        android:theme="@style/DialogEditTextTheme"
        android:id="@+id/textFoodName" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_add_food_dialog_category"
        android:textColor="@color/colorCheckboxText"
        android:spinnerMode="dialog"
        android:layout_margin="5dp"
        android:textAlignment="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="@string/add_food_url"
            android:layout_marginStart="5dp"
            android:theme="@style/DialogEditTextTheme"
            android:id="@+id/textDialogFoodUrl"
            android:inputType="text"
            android:focusable="false" />
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:minWidth="30dp"
            android:theme="@style/DialogCheckBoxTheme"
            android:layout_weight="1"
            android:id="@+id/DialogCheckBox" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:minWidth="100dp"
            android:text="사진 없음"
            android:id="@+id/dialogNoImgTextview"/>

    </LinearLayout>
</LinearLayout>